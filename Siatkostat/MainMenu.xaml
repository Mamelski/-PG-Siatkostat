<Page
    x:Class="Siatkostat.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Siatkostat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Width="180" Margin="0,15,0,0">
            <Image Source="logo.png" Height="80" HorizontalAlignment="Center"/>
            <Button Name="MatchStartButton" HorizontalAlignment="Stretch" Margin="0,15,0,0" Click="MatchStartButton_Click">Rozegraj mecz</Button>
            <Button Name="DisplayStatisticsButton" HorizontalAlignment="Stretch" Click="DisplayStatisticsButton_Click">Wyświetl statystyki</Button>
            <Button Name="ModifyTeamButton" HorizontalAlignment="Stretch">Modyfikuj drużynę</Button>
            <Button Name="SettingsButton" HorizontalAlignment="Stretch">Ustawienia</Button>
            <Button Name="ExitButton" HorizontalAlignment="Stretch">Wyjście</Button>
        </StackPanel>
    </Grid>
</Page>
