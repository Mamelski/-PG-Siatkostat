<Page
    x:Class="Siatkostat.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SiatkostatBackgroundImage}">

    <Grid>
        <StackPanel Orientation="Vertical" 
                    Width="180">
            <Image Source="Assets/SiatkostatLogo.png" 
                   Height="80" 
                   HorizontalAlignment="Center" 
                   Margin="0,30,0,0"/>
            <Button HorizontalAlignment="Stretch" 
                    Margin="0,30,0,0" 
                    Click="MatchStartButton_Click"
                    Content="Rozegraj mecz"/>
            <Button HorizontalAlignment="Stretch" 
                    Click="DisplayStatisticsButton_Click"
                    Content="Wyświetl statystyki"/>
            <Button Name="EditTeamButton" 
                    HorizontalAlignment="Stretch"
                    Content="Modyfikuj drużynę" 
                    Click="EditTeamButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
