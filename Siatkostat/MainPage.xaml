<Page
    x:Class="Siatkostat.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundImage}">

    <Grid>
        <StackPanel Orientation="Vertical" Width="180">
            <Image Source="logo.png" Height="80" HorizontalAlignment="Center" Margin="0,30,0,0"/>
            <Button Name="MatchStartButton" HorizontalAlignment="Stretch" Margin="0,30,0,0" Click="MatchStartButton_Click">Rozegraj mecz</Button>
            <Button Name="DisplayStatisticsButton" HorizontalAlignment="Stretch" Click="DisplayStatisticsButton_Click">Wyświetl statystyki</Button>
            <Button Name="ModifyTeamButton" HorizontalAlignment="Stretch">Modyfikuj drużynę</Button>
        </StackPanel>
    </Grid>
</Page>
